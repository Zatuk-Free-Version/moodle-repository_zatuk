{{!
    @template repository_zatuk/index
    Example context (json):
    {
        "uploadvideosurl": "https://zatukvideos.com",
        "videos": "true"
    }
}}
<div>
    <div class="clearfix">
        <div class="pull-left">
            {{> repository_zatuk/videos/filters }}
        </div>
        <div class="pull-right">
            <a href="{{uploadvideosurl}}" class="btn btn-primary">{{#str}}uploadvideo, repository_zatuk{{/str}}</a>
        </div>
    </div>
    <div class="mt-2">
        {{#videos}}
            {{> repository_zatuk/videos/item }}
        {{/videos}}
    </div>
</div>