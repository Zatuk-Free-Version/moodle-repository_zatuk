{{!
    @template repository_zatuk/item
    Example context (json):
    {
        "videoid":"123",
        "title":"zatuk title"
    }
}}
<div class="card my-2" data-action="play-video-{{videoid}}" data-video="{{videoid}}">
    <img class="card-img-top" src="https://demo.zatuk.com/theme/image.php/material/mod_zatuk/1681979900/video" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{#str}} published, repository_zatuk {{/str}} {{ videoid }}</p>
    </div>
</div>
{{#js}}
    require(['repository_zatuk/player'], function(player) {
        player.play('[data-action="play-video-{{videoid}}"]');
    });
{{/js}}