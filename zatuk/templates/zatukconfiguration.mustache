{{!
    @template repository_zatuk/zatukconfiguration
    Example context (json):
    {
       "zatukkey" : "abc12341234",
       "zatuksecret" : "234Absdj22",
       "register_form" : ""
    }
}}
<div class="repository_view">
    <div class="registration_process mb-3">
        <div class="row row zatukbanner m-0 mb-3 p-3">
        <div class="col-md-3">
            <div class="zatuklogo"></div>
        </div>

        <div class="col-md-7">
        <h4>{{#str}}headercontent, repository_zatuk{{/str}}</h4>
        <p>{{#str}}bodycontent, repository_zatuk{{/str}}</p>
        </div>

        <div class="col-md-2 d-flex align-items-center justify-content-center text-center ">
        <a class = "btn btn-primary upgrade  btn-block" href="https://zatuk.zatuk.com/" target="_blank">{{#str}}upgrade, repository_zatuk{{/str}}</a>
        </div>

        </div>
    </div> 
    <div class="card w-100 mt-3 shadow">
        <div class="card-header d-flex justify-content-between "  data-toggle="collapse" href="#configuration_tab" aria-expanded="false" aria-controls="collapseExample"> 
            <h5 class="key_header mb-2 text-center">
                {{#str}}configuration, repository_zatuk{{/str}}
            </h5>
            <i class="fa-solid fa-sort-down"></i>
        </div>
        <div class="card-body collapse show secret_keys" id="configuration_tab">
        <div class="key_value text-muted active d-flex p-2 m-0">
                <div class="mr-3">{{#str}}apikey, repository_zatuk{{/str}} :</div>
                <div class="">
                    <b class="text-dark">{{zatukkey}}</b>
                </div>
            </div>
            <div class="key_value text-muted d-flex p-2 m-0">
                <div class="mr-3-">{{#str}}secret, repository_zatuk{{/str}} :</div>
                <div class="">
                    <b class="text-dark"> {{zatuksecret}}</b>
                </div>
            </div>
        </div>  
    </div>
    <div class="card w-100 mt-3 shadow">
        <div class="card-header d-flex justify-content-between "  data-toggle="collapse" href="#collapseregisterationform" aria-expanded="false" aria-controls="collapseregisterationform"> 
            <h5 class="key_header mb-2 text-center">
                {{#str}}registeration, repository_zatuk{{/str}}
            </h5>
            <i class="fa-solid fa-sort-down"></i>
        </div>
        <div class="card-body collapse show" id="collapseregisterationform">
            <div class="reg_form p-4">{{{register_form}}}</div>
        </div>  
    </div>
 
</div>

{{#js}}
    require(['repository_zatuk/configuration'], function(s) {
        s.init();
    });
{{/js}}